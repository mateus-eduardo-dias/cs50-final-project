<%- include('layouts/header.ejs') %>
    <main>
        <div class="text-center fs-3 text-uppercase mt-3">Create your quiz</div>
        <div class="text-center my-2">
            <button type="button" class="btn btn-primary btn-schema-2" onclick="submitQuiz()">Submit quiz</button>
        </div>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-5">
                    <form class="border rounded p-3">
                        <div class="mb-3">
                            <label for="quizNameInput" class="form-label">Quiz name</label>
                            <input type="text" class="form-control" id="quizNameInput" value="">
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="modal fade" tabindex="-1" id="errorModal">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Error</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p id="errorModalMsg"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="my-3" id="questions-container">
            <question-form qid="1"></question-form>
        </div>
        <div class="text-center fs-2">
            <i class="bi bi-plus-circle" id="addQuestionBtn"></i>
        </div>
    </main>
    <link href="/css/quiz_create_style.css" rel="stylesheet">
    <script src="/js/quiz_create.js"></script>
<%- include('layouts/footer.ejs') %>